{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "redux-guards": [
        "../../src"
      ],
      "redux-guards/redux-pack": [
        "../../src/redux-pack"
      ]
    },
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "build",
    "lib": [
      "es6",
      "es7",
      "dom"
    ]
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}